<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
            crossorigin="anonymous"
        />
        <title><%= title%> | Passport Auth</title>
        <style>
            img {
                width: 100%;
            }

            .profilepic {
                width: auto !important;
                height: 30px !important;
            }
        </style>
    </head>

    <body>
        <div class="container mt-5">
            <a class="" href="/home">go back</a>
            <h3 class="alert alert-dark mt-2">Hello <%= user.username%> ðŸ‘‹</h3>
            <%- include('Navigation')%>
            <!--  -->
            <hr />
            <div class="container m-auto d-flex flex-wrap">
                <% blogs.forEach((blog) => { %>

                <div class="card me-3 mb-3" style="width: 18rem">
                    <div class="card-body">
                        <h5 class="card-title">
                            <img
                                class="profilepic"
                                src="/uploads/<%= user.avatar%>"
                                alt=""
                            />
                            <%= user.username%>
                        </h5>

                        <%- blog.blog%>

                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>

                <% })%>
            </div>
            <!-- code to show all blogs... -->
        </div>
    </body>
</html>
